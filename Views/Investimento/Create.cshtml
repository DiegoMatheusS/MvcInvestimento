@model InvestimentoMvc.Models.MoedaViewModel
@{
    ViewBag.Title = "Nova Moeda";
}
@if (@TempData["Mensagem"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Mensagem"]</div>
}
<!--Configuração para exibir mensagem de erro -->
@if (@TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["MensagemErro"]</div>
}
<!--Insira aqui os TempDAta de sucesso e erro para enviar tela da morte -->
<h2>Adicionar Investimento</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.Id, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "control-label col-md-2"} })
            </div>
             @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control"} })
            </div><br>
             @Html.LabelFor(model => model.Valor, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Valor, new { htmlAttributes = new { @class = "form-control"} })
            </div><br>
             @Html.LabelFor(model => model.Quantidade, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Quantidade, new { htmlAttributes = new { @class = "form-control"} })
            </div><br>
             @Html.LabelFor(model => model.Data, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Data, new { htmlAttributes = new { @class = "form-control"} })
            </div><br>
            @Html.LabelFor(model => model.Operacao, htmlAttributes: new { @class = "control-label col-md-2" })
           <div class="col-md-6">
                @Html.DropDownListFor(model => model.Operacao,
                         Html.GetEnumSelectList(typeof(Investimento.Models.Enuns.OperacaoEnum)),
                         "---Selecione---", new { @class = "form-control" })
            </div><br>
            @Html.LabelFor(model => model.Lucro, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Lucro, new { htmlAttributes = new { @class = "form-control"} })
            </div><br>
                @Html.LabelFor(model => model.Imposto, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                @Html.EditorFor(model => model.Imposto, new { htmlAttributes = new { @class = "form-control"} })
            </div><br>
        </div><br>
        <div class="form-group">
            <div class="col-md-offset-2 col-mds-6">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
