@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center">
    <h1 class="display-4">Investimento</h1>
    <h1 class="display-4">Investimento</h1>
<table>
        <tr>
            <td>Cotação do Dólar:</td>
            <td id="dolar"></td>
        </tr>
    </table>

    <script>
        // Função para obter a cotação do dólar
        async function getCotacaoDolar() {
            try {
                const response = await fetch('https://olinda.bcb.gov.br/olinda/servico/PTAX/versao/v1/odata/CotacaoDolarDia(dataCotacao=@dataCotacao)?@dataCotacao=\'11-21-2019\'&$format=json');
                const data = await response.json();
                const cotacao = data.value[0].cotacaoCompra; // Valor de compra do dólar
                document.getElementById('dolar').textContent = cotacao;
            } catch (error) {
                console.error('Erro ao obter cotação do dólar:', error);
            }
        }

        // Chama a função para obter a cotação do dólar
        getCotacaoDolar();
    </script>
</div>
